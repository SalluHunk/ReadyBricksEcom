<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:background="@color/headerColor"
        android:gravity="center|left"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imgBack"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.70"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/newsletter"
            android:id="@+id/imgProduct"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="ID: #2"
            android:textColor="#929292"
            android:textSize="12sp"
            android:id="@+id/txtOrderId"
            />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="Single Product Name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ORDER DETAILS"
                    android:id="@+id/txtOrderDetails"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="STATUS"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:id="@+id/txtStatus"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/linDesc"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Product Total:"
                        android:textColor="#929292"
                        android:textSize="12sp"
                        android:id="@+id/txtProductTotalText"
                        />
                    <TextView
                        android:id="@+id/txtProductTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Single Product Name"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Estimated Delivery Date:"
                        android:textColor="#929292"
                        android:textSize="12sp"
                        android:id="@+id/txtEstimatedDateText"
                        />
                    <TextView
                        android:id="@+id/txtEstimatedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Single Product Name"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Estimated Delivery Date:"
                        android:textColor="#929292"
                        android:textSize="12sp"
                        android:id="@+id/txtOrderDateText"
                        />
                    <TextView
                        android:id="@+id/txtOrderDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Single Product Name"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/linAdditional"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                             <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Details:"
                        android:textSize="17sp"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/txtCustomerDetails"
                        />
                             <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCustName"
                        android:layout_margin="5dp"
                        android:textColor="#948D8D"
                        android:text="Demo Customer"
                        />
                             <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCustAddress"
                        android:layout_margin="5dp"
                        android:textColor="#948D8D"
                        android:text="This is demo customer address to check everything is working firne or not "
                        />
                             <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCustPhone"
                        android:layout_margin="5dp"
                        android:textColor="#948D8D"
                        android:text="+91- 8866199937"
                        />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manufacturer Details:"
                        android:textSize="17sp"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/txtManuDetails"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtManuName"
                        android:layout_margin="5dp"
                        android:textColor="#948D8D"
                        android:text="Demo Manufacturer"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtManuAddress"
                        android:layout_margin="5dp"
                        android:textColor="#948D8D"
                        android:text="This is demo customer address to check everything is working firne or not "
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtManuPhone"
                        android:layout_margin="5dp"
                        android:textColor="#948D8D"
                        android:text="+91- 8866199937"
                        />
                </LinearLayout>
                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/cardTransporter"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Transporter Details:"
                                android:textSize="17sp"
                                android:layout_margin="5dp"
                                android:textColor="@android:color/black"
                                android:id="@+id/txtTransDetails"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtDriverName"
                                android:layout_margin="5dp"
                                android:textColor="#948D8D"
                                android:text="Driver Name"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtTruckNumber"
                                android:layout_margin="5dp"
                                android:textColor="#948D8D"
                                android:text="GJ03RR1111"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtDriverPhone"
                                android:layout_margin="5dp"
                                android:textColor="#948D8D"
                                android:text="+91- 8866199937"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cardAssign"
                    android:layout_marginRight="10dp"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtHeader"
                        android:textColor="@android:color/black"
                        android:text=": ASSIGN ORDER :"
                        />
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spiDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_multiline="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        app:ms_dropDownHintView="@layout/dropdown_hint"
                        app:ms_hintView="@layout/hint_layout"
                        app:ms_hint="Select Driver"
                        app:ms_enableFloatingLabel="false"
                        app:ms_enableErrorLabel="false"
                        app:ms_floatingLabelText="User Type"
                        app:ms_baseColor="@color/colorMain"
                        app:ms_highlightColor="@color/colorMain"
                        app:ms_errorColor="@color/colorMain"
                        app:ms_typeface="regularfont.otf"
                        app:ms_thickness="0.5dp"
                        app:ms_hintColor="@android:color/black"
                        app:ms_arrowColor="@color/colorMain"
                        app:ms_arrowSize="16dp"
                        app:ms_alignLabels="false"
                        app:ms_floatingLabelColor="@color/colorMain"/>
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spiTruck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_multiline="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        app:ms_dropDownHintView="@layout/dropdown_hint"
                        app:ms_hintView="@layout/hint_layout"
                        app:ms_hint="Select Truck"
                        app:ms_enableFloatingLabel="false"
                        app:ms_enableErrorLabel="false"
                        app:ms_floatingLabelText="User Type"
                        app:ms_baseColor="@color/colorMain"
                        app:ms_highlightColor="@color/colorMain"
                        app:ms_errorColor="@color/colorMain"
                        app:ms_typeface="regularfont.otf"
                        app:ms_thickness="0.5dp"
                        app:ms_hintColor="@android:color/black"
                        app:ms_arrowColor="@color/colorMain"
                        app:ms_arrowSize="16dp"
                        app:ms_alignLabels="false"
                        app:ms_floatingLabelColor="@color/colorMain"/>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/buttondrawableaddcart"
                        android:text="SUBMIT"
                        android:textColor="@android:color/white" />

                </LinearLayout>
                </androidx.cardview.widget.CardView>
